generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://user:password@localhost:5432/enclaveid"
}

model Datapoint {
  id        Int      @id @default(autoincrement())
  type      String
  time      DateTime
  data      Json
  Account   Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)
  accountId Int
}

model Account {
  id         Int         @id @default(autoincrement())
  name       String
  email      String      @unique
  datapoints Datapoint[]
  User       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     Int
}

model User {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  accounts Account[]
}
