generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db.sql"
}

model User {
  id               String    @id @default(cuid())
  email            String    @unique
  password         String
  confirmationCode String    @default(cuid())
  confirmedAt      DateTime?
  session          Session?

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  userTraits  UserTraits?
  chromePod   ChromePod?  @relation(fields: [chromePodId], references: [id])
  chromePodId String?
}

model Session {
  id         String @id @default(cuid())
  sessionKey String
  userId     String @unique
  user       User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserTraits {
  id String @id @default(cuid())

  bigFiveId String  @unique
  bigFive   BigFive @relation(fields: [bigFiveId], references: [id])

  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BigFive {
  id String @id @default(cuid())

  openness          Float
  conscientiousness Float
  extraversion      Float
  agreeableness     Float
  neuroticism       Float

  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  userTraits UserTraits[]
}

model ChromePod {
  id String @id @default(cuid())

  chromePodId String @unique

  rdpUsername String
  rdpPassword String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User[]
}
