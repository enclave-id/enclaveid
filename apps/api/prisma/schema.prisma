generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db.sql"
}

model User {
  id       String    @id @default(cuid())
  email    String    @unique
  password String
  Session  Session[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Session {
  id         String   @id @default(cuid())
  sessionKey String
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  expiresAt  DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
